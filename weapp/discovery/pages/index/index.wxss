page {
  position: relative;
  width: 100vw; 
  /* 相对单位viewport width */
  height: 100vh;
  /* 相对单位viewport height */
}
.container {
  position: absolute;
  width: 80%;
  height: 60%;
  border: 1px solid red;
  /* margin: 0px auto; */
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  overflow: hidden;
  border-radius: 5px;
  text-align: center;
}
.title {
  color: red;
  font-size: 20px;
}