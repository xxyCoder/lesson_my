.movie-list {
    padding: 20rpx;
    background-color: #ffffff;
    color: #787878;
    border-top: 1px solid #eaeaea;
    border-bottom: 1px solid #eaeaea;
}

.movie-list .wp_cell__hd image {
    display: block;
    width: 130rpx;
    height: 190rpx;
}

.movie-list .wp_cell__bd {
    margin:0 20rpx;
    padding-top: 10rpx;
    overflow: hidden;
}

.movie-list .wp_cell__bd .title {
    font-size: 14pt;
    color: #333333;
    white-space: nowrap;
    overflow: hidden;
}
.movie-list .wp_cell__bd .subTitle {
    font-size: 12pt;
    color: #666666;
    margin: 4rpx 0px;
    white-space: nowrap;
    overflow: hidden;
}
.movie-list .wp_cell__bd .author {
    font-size: 12pt;
    color: #666666;
    margin: 4pt 4px;
}

.movie-list .wp_cell__bd .score {
    font-size: 12pt;
    color: #cf616a;
}

.movie-list .wp_cell__ft .action {
    margin-top: 60rpx;
    border: 1px solid #29cc6d;
    border-radius: 4rpx;
    color: #29cc6d;
    padding: 4rpx 8rpx;
    font-size: 12pt;
    line-height: 16pt;
    text-align: center;
}